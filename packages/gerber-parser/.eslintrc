{
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "quotes": [2, "single", "avoid-escape"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "never"],
    "eqeqeq": [2, "allow-null"],
    "no-extend-native": 2,
    "space-before-function-paren": [2, "never"],
    "curly": [2, "all"]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  },
  "extends": "eslint:recommended"
}
