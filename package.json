{
  "name": "tracespace",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "_test": "mocha 'packages/!(node_modules)/test/**/*.js'",
    "test": "nyc npm run _test",
    "posttest": "npm run lint",
    "test:watch": "npm run _test -- --reporter=dot --watch",
    "lint": "standard --verbose | snazzy",
    "ci": "npm test",
    "postci": "nyc report --reporter=lcov && codecov",
    "bench": "node bench",
    "integration": "node integration/visual-test-server"
  },
  "nyc": {
    "exclude": [
      "**/test/**/*.js",
      "build"
    ]
  },
  "devDependencies": {
    "browserify": "^14.5.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "end-of-stream": "^1.4.0",
    "express": "^4.16.2",
    "glob": "^7.1.2",
    "into-stream": "^3.1.0",
    "lerna": "^2.5.1",
    "lodash": "^4.17.4",
    "mocha": "^4.0.1",
    "nanobench": "^2.1.0",
    "nyc": "^11.4.1",
    "proxyquire": "^1.8.0",
    "run-parallel": "^1.1.6",
    "run-waterfall": "^1.1.3",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
